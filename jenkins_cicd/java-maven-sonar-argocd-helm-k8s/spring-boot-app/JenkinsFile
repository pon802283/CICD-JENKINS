pipeline {
  agent {
    docker {
      image 'pon802283/jenkins-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        git branch: 'main', url: 'https://github.com/pon802283/CICD-JENKINS.git',
        credentialsId: 'b4a023c8-2eb1-4be8-86d8-96ddd6d05921'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://35.94.142.109:9000"
        // SONAR_URL = "http://3.138.105.25:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "pon802283/ultimate-cicd:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "CICD-JENKINS"
            GIT_USER_NAME = "pon802283"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    # Clean old folder (if exists)
                    rm -rf cicd_dep
    
                    # Clone the deployment repo
                    git clone https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git
    
                    # Move into the repo
                    cd cicd_dep
    
                    # Set Git config inside this repo
                    git config user.email "pon802283@gmail.com"
                    git config user.name "pon802283"
    
                    # Replace image tag
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
    
                    # Stage changes
                    git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
    
                    # Commit changes (ignore if nothing changed)
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
    
                    # Push back to GitHub
                    git push origin main
                '''
            }
        }
    }
  }
}
