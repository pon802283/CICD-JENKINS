pipeline {
    agent {
        docker {
            image 'maven:3.9.6-eclipse-temurin-17'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        SONAR_URL = "http://3.142.46.240:9000"
        DOCKER_IMAGE = "pon802283/cicd:${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', 
                    credentialsId: 'GitHub-cred',
                    url: 'https://github.com/pon802283/CICD-JENKINS.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh '''
                cd jenkins_cicd/java-maven-sonar-argocd-helm-k8s/spring-boot-app
                mvn clean package
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withCredentials([string(credentialsId: 'SonarQube', variable: 'TOKEN')]) {
                    sh '''
                    cd jenkins_cicd/java-maven-sonar-argocd-helm-k8s/spring-boot-app
                    mvn sonar:sonar -Dsonar.login=$TOKEN -Dsonar.host.url=${SONAR_URL}
                    '''
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'Docker-cred', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh '''
                    cd jenkins_cicd/java-maven-sonar-argocd-helm-k8s/spring-boot-app
                    docker build -t ${DOCKER_IMAGE} .
                    echo "$PASS" | docker login -u "$USER" --password-stdin
                    docker push ${DOCKER_IMAGE}
                    '''
                }
            }
        }

        stage('Update Deployment Manifests') {
            steps {
                withCredentials([string(credentialsId: 'GitHub-cred', variable: 'G_TOKEN')]) {
                    sh '''
                    rm -rf CICD-DEPLOY
                    git clone https://${G_TOKEN}@github.com/pon802283/CICD-DEPLOY.git

                    cd CICD-DEPLOY

                    git config user.email "pon802283@gmail.com"
                    git config user.name "ponsankar"

                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" deployment.yml

                    git add deployment.yml
                    git commit -m "Updated image version ${BUILD_NUMBER}" || echo "No changes"
                    git push origin main
                    '''
                }
            }
        }

    }
}
